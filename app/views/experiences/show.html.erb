<h1>詳細</h1>

<p>区画名:</p>
<% @plots.each do |plot| %>
  <%= plot.name %>
<% end %>

<h1><%= @experience.title %></h1>
<p>
  <%= @experience.content %>
</p>
<%= month_calendar events: @experience.schedules do |date, schedules| %>
  <%= date %>
  <% schedules.each do |schedule| %>
    <div>
      <%= link_to schedule.title, edit_experience_schedule_path(@experience, schedule) %>
      <%= schedule.start_time.strftime("%H:%M") %> - <%= schedule.end_time.strftime("%H:%M") %>
    </div>
  <% end %>
<% end %>
<%= form_with(model: [@experience, @experience.schedules.build], local: true) do |f| %>
  <div>
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :start_time, "開始時刻" %>
    <%= f.datetime_select :start_time %>
  </div>
  <div>
    <%= f.label :end_time, "終了時刻" %>
    <%= f.datetime_select :end_time %>
  </div>
  <%= f.submit "スケジュールを追加" %>
<% end %>

<% if @experience.images.attached? %>
  <div>
    <% @experience.images.each do |image| %>
      <%= image_tag(image, alt: "Experience Image", style: "max-width: 100%;") %>
    <% end %>
  </div>
<% end %>

<%= link_to "戻る", experiences_path %>