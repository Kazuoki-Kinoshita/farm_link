<div class="container">
  <h2 class="text-center mb-4"><%= t('.sign_in') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-3">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレスを入力してください" %>
  </div>

  <div class="mb-3">
    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "パスワードを入力してください"  %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "form-label" %>
    </div>
  <% end %>

  <div class="mb-4">
    <%= f.submit t('.sign_in'), class: "btn btn-primary w-100" %>
  </div>
<% end %>

 <div class="text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>