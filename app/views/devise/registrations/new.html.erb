<div class="container">
  <h2 class="text-center mb-4"><%= t('.sign_up') %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
     <div class="role-selection mb-3 text-center">
      <% User.roles.except('admin').keys.each do |role| %>
        <div class="form-check form-check-inline">
          <%= f.radio_button :role, role, class: "form-check-input role-radio", id: "role_#{role}" %>
          <% label_text = role == 'farmer' ? '農家の方' : '一般の方' %>
          <%= f.label :role, label_text, class: "btn btn-outline-primary role-label", for: "role_#{role}" %>
        </div>
      <% end %>
    </div>
      
    <div class="mb-3">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "名前を入れてください" %>
    </div>

    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレスを入力してください" %>
    </div>

    <div class="mb-3">
      <%= f.label :password, class: "form-label" %>
      <% if @minimum_password_length %>
      <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワードを入力してください" %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation, class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "パスワードをもう一度入力してください" %>
    </div>

    <div class="mb-4">
      <%= f.submit t('.sign_up') , class: "btn btn-primary w-100"%>
    </div>
  <% end %>

  <div class="text-center">
    <%= render "devise/shared/links" %>
  </div>  
</div>