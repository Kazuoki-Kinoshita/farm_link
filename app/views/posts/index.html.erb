<div class="container post-container">
  <h2 class="text-center mb-4">投稿一覧</h2>

  <%= link_to "投稿する", new_post_path, class: "btn btn-primary btn-lg mb-4" %>

  <% @posts.each do |post| %>
    <div class="card mb-4">
      <div class="card-body">
        <p class="card-text date"><%= post.created_at.strftime("%Y年%m月%d日") %></p>
        <h5 class="card-title">
          <%= link_to post.title, post_path(post), class: "text-decoration-none" %>
        </h5>
        <p class="card-text rows5"><%= simple_format(truncate(post.content, length: 200))  %></p>

        <% post.images.each do |image| %>
          <%= image_tag(image, alt: " 投稿画像", class: "img-fluid mb-2", style: "max-width: 23%;") %>
        <% end %>

        <div class="d-flex">
          <%= link_to "詳細", post_path(post), class: "btn btn-outline-secondary me-2" %>
          <%= link_to "編集", edit_post_path(post), class: "btn btn-secondary me-2" %>
          <%= link_to "削除", post_path(post), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  <% end %>
</div>