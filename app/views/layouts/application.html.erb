<!DOCTYPE html>
<html>
  <head>
    <title>FarmLink</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <% if current_user.role == "general" %>
        <% if current_user.general.present? %>
          <%= link_to "プロフィール", general_path(current_user.general) %>
        <% else %>
          <%= link_to "プロフィール作成", new_general_path %>
        <% end %>

      <% elsif current_user.role == "farmer" %>
        <%= link_to "プロフィール", "########" %>
      <% end %>
      
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to "ログイン", new_user_session_path %>
      <%= link_to "アカウント登録", new_user_registration_path %>
    <% end %>

    <% if notice %>
      <p class="alert alert-notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-error"><%= alert %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
