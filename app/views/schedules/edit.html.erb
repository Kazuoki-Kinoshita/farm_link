<%= form_with(model: @schedule, url: experience_schedule_path(@experience, @schedule), method: :patch, local: true) do |form| %>
  <div>
    <%= form.label :title, "タイトル" %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :start_time, "開始時刻" %>
    <%= form.datetime_select :start_time %>
  </div>
  <div>
    <%= form.label :end_time, "終了時刻" %>
    <%= form.datetime_select :end_time %>
  </div>
  <%= form.submit "スケジュールを更新" %>
<% end %>
<%= link_to "スケジュールを削除", experience_schedule_path(@experience, @schedule), method: :delete, data: { confirm: "本当に削除してよろしいですか？" } %>